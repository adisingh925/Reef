<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/linear_layout_corner_radius_black"
    android:layout_margin="@dimen/medium_margin"
    android:orientation="vertical"
    android:layout_height="150dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Water Quality"
            android:textColor="#3682b1"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="11sp"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:textColor="@color/white"
            android:text="as of - 0"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Slot 1"
                android:textSize="11sp"
                android:layout_marginTop="@dimen/medium_margin"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/circle"
                android:layout_width="60dp"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:background="@drawable/outlined_circle"
                android:layout_height="60dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:text="Slot 1"
                android:textSize="11sp"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_alignBottom="@id/circle"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:text="Slot 1"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@id/circle"
                android:layout_marginBottom="@dimen/medium_margin"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Slot 2"
                android:textSize="11sp"
                android:layout_marginTop="@dimen/medium_margin"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/circle1"
                android:layout_width="60dp"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:background="@drawable/outlined_circle"
                android:layout_height="60dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:text="Slot 2"
                android:textSize="11sp"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_alignBottom="@id/circle1"
                android:layout_marginBottom="10sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:text="Slot 2"
                android:textSize="17sp"
                android:layout_marginTop="10sp"
                android:layout_alignTop="@id/circle1"
                android:layout_marginBottom="@dimen/medium_margin"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Slot 3"
                android:layout_marginTop="@dimen/medium_margin"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/circle2"
                android:layout_width="60dp"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:background="@drawable/outlined_circle"
                android:layout_height="60dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:text="Slot 3"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_alignBottom="@id/circle2"
                android:textSize="11sp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:text="Slot 3"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@id/circle2"
                android:layout_marginBottom="@dimen/medium_margin"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Slot 4"
                android:textSize="11sp"
                android:layout_marginTop="@dimen/medium_margin"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/circle3"
                android:layout_width="60dp"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:background="@drawable/outlined_circle"
                android:layout_height="60dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:text="Slot 4"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_alignBottom="@id/circle3"
                android:textSize="11sp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:text="Slot 4"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@id/circle3"
                android:layout_marginBottom="@dimen/medium_margin"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Slot 5"
                android:textSize="11sp"
                android:layout_marginTop="@dimen/medium_margin"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/circle4"
                android:layout_width="60dp"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp"
                android:background="@drawable/outlined_circle"
                android:layout_height="60dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:text="Slot 5"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_alignBottom="@id/circle4"
                android:textSize="11sp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:text="Slot 5"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@id/circle4"
                android:layout_marginBottom="@dimen/medium_margin"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>