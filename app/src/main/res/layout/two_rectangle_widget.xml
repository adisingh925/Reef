<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/two_rectangle_widget_relative_layout_apex"
    android:background="@drawable/linear_layout_corner_radius_black"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/card1"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:orientation="horizontal"
        android:background="@drawable/linear_layout_corner_radius">

        <TextView
            android:id="@+id/timestamp"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:layout_centerInParent="true"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:text="2024-02-02 10:40:48"
            android:textColor="@color/white"
            android:textSize="16sp"
             />

        <TextView
            android:id="@+id/value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|end"
            android:layout_toStartOf="@id/unit"
            android:layout_centerInParent="true"
            android:text="17"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/unit"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:text="watts"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/linear_layout_corner_radius">

        <TextView
            android:id="@+id/timestamp2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:layout_alignParentStart="true"
            android:text="2024-02-02 10:40:48"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/value2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|end"
            android:layout_toStartOf="@id/unit2"
            android:layout_centerInParent="true"
            android:text="23"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/unit2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:text="watts"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>