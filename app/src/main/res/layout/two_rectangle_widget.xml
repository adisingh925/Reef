<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_margin"
        android:background="@drawable/linear_layout_corner_radius">

        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/value"
            android:layout_toStartOf="@id/value"
            android:text="2024-02-02 10:40:48"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/medium_margin"
            android:textSize="16sp"
             />

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_toStartOf="@id/unit"
            android:text="23"
            android:layout_marginEnd="@dimen/medium_margin"
            android:textColor="@color/white"
            android:textSize="@dimen/heading_font_size" />

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/value"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/medium_margin"
            android:text="watts"
            android:layout_marginEnd="@dimen/medium_margin"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:background="@drawable/linear_layout_corner_radius">

        <TextView
            android:id="@+id/timestamp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/value2"
            android:layout_toStartOf="@id/value2"
            android:text="2024-02-02 10:40:48"
            android:layout_marginEnd="@dimen/medium_margin"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/value2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_toStartOf="@id/unit2"
            android:text="23"
            android:layout_marginEnd="@dimen/medium_margin"
            android:textColor="@color/white"
            android:textSize="@dimen/heading_font_size" />

        <TextView
            android:id="@+id/unit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/value2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/medium_margin"
            android:text="watts"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>