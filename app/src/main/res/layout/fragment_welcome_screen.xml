<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.WelcomeScreen">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/welcome_screen_card"
        android:layout_marginTop="@dimen/extra_large_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="@dimen/default_card_corner_radius"
        android:layout_width="250dp"
        android:layout_height="250dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/welcome_page_image"
            android:scaleType="centerCrop"
            app:tint="#00FFFFFF"
            android:layout_height="wrap_content"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/welcome_screen_heading"
        android:layout_width="0dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome_screen_card"
        android:textSize="@dimen/heading_font_size"
        android:layout_margin="@dimen/medium_margin"
        android:text="@string/welcome_screen_heading_text"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/welcome_screen_add_widgets_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/welcome_screen_footer_text"
        android:layout_width="0dp"
        android:textSize="@dimen/default_button_text_size"
        android:layout_margin="@dimen/medium_margin"
        android:text="@string/welcome_screen_button_text"
        app:cornerRadius="@dimen/default_button_radius"
        android:layout_height="@dimen/default_button_height"/>

    <TextView
        android:id="@+id/welcome_screen_footer_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/welcome_screen_footer_text"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:layout_marginBottom="@dimen/extra_large_margin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>