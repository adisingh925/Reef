<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/graphg_widget_layout_card"
    android:background="@drawable/linear_layout_corner_radius_black"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:background="@drawable/linear_layout_corner_radius"
        app:chart_labelsSize="10sp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="25.7"
            android:textColor="@color/white"
            android:id="@+id/uppervalue"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="25.0"
            android:textColor="@color/white"
            android:id="@+id/lowervalue"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginEnd="30sp"
            android:id="@+id/graph"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout"
        android:layout_weight="1"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/linear_layout_corner_radius_black"
        android:orientation="vertical"
        app:cardCornerRadius="15dp"
        app:cardElevation="@dimen/default_card_elevation">

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Alkalinity"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/dotted_line"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:layerType="software"
            android:src="@drawable/dotted_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="23"
                android:layout_weight="1"
                android:gravity="center|end"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/unit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ppm"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/medium_margin"
                android:gravity="center|start"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>