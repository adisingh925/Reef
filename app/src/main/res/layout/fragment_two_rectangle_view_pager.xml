<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TwoRectangleViewPagerFragment">

    <include android:id="@+id/preview_card"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/top_rectangle_value"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/two_rectangle_widget"
        android:layout_width="300dp" />

    <com.google.android.material.textfield.TextInputLayout
        app:layout_constraintTop_toBottomOf="@id/preview_card"
        android:id="@+id/top_rectangle_value"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        app:boxCornerRadiusTopStart="@dimen/default_button_radius"
        app:boxCornerRadiusBottomStart="@dimen/default_button_radius"
        app:boxCornerRadiusBottomEnd="@dimen/default_button_radius"
        app:boxCornerRadiusTopEnd="@dimen/default_button_radius"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        app:layout_constraintBottom_toTopOf="@id/top_rectangle_unit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/top_rectangle_value_input"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:hint="Top Rectangle Value" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        app:layout_constraintTop_toBottomOf="@id/top_rectangle_value"
        android:id="@+id/top_rectangle_unit"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        app:boxCornerRadiusTopStart="@dimen/default_button_radius"
        app:boxCornerRadiusBottomStart="@dimen/default_button_radius"
        app:boxCornerRadiusBottomEnd="@dimen/default_button_radius"
        app:boxCornerRadiusTopEnd="@dimen/default_button_radius"
        app:layout_constraintBottom_toTopOf="@id/bottom_rectangle_value"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/top_rectangle_unit_input"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:hint="Top Rectangle Unit" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        app:layout_constraintTop_toBottomOf="@id/top_rectangle_unit"
        android:id="@+id/bottom_rectangle_value"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        app:boxCornerRadiusTopStart="@dimen/default_button_radius"
        app:boxCornerRadiusBottomStart="@dimen/default_button_radius"
        app:boxCornerRadiusBottomEnd="@dimen/default_button_radius"
        app:boxCornerRadiusTopEnd="@dimen/default_button_radius"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        app:layout_constraintBottom_toTopOf="@id/bottom_rectangle_unit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/bottom_rectangle_value_input"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:hint="Bottom Rectangle Value" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        app:layout_constraintTop_toBottomOf="@id/bottom_rectangle_value"
        android:id="@+id/bottom_rectangle_unit"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        app:boxCornerRadiusTopStart="@dimen/default_button_radius"
        app:boxCornerRadiusBottomStart="@dimen/default_button_radius"
        app:boxCornerRadiusBottomEnd="@dimen/default_button_radius"
        app:boxCornerRadiusTopEnd="@dimen/default_button_radius"
        app:layout_constraintBottom_toTopOf="@id/submit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/bottom_rectangle_unit_input"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:hint="Bottom Rectangle Unit" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_rectangle_unit"
        app:layout_constraintBottom_toTopOf="@id/delete"
        android:text="Save Widget"
        android:textSize="@dimen/default_button_text_size"
        app:cornerRadius="@dimen/default_button_radius"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_button_height"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/delete"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/submit"
        android:backgroundTint="@color/red"
        android:text="Delete Widget"
        android:textSize="@dimen/default_button_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cornerRadius="@dimen/default_button_radius"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_button_height"/>


</androidx.constraintlayout.widget.ConstraintLayout>